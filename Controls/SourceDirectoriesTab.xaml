<UserControl x:Class="CodeMerger.Controls.SourceDirectoriesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="0,16,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="directoryCountText" Text="" FontSize="12" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="All" Click="SelectAllDirectories_Click" Style="{StaticResource SmallLinkButton}" ToolTip="Select all"/>
                    <TextBlock Text="Â·" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="6,0"/>
                    <Button Content="None" Click="DeselectAllDirectories_Click" Style="{StaticResource SmallLinkButton}" ToolTip="Deselect all"/>
                </StackPanel>
            </Grid>

            <ListBox x:Name="inputDirListBox" Grid.Row="1" Margin="0,12,0,12" Style="{StaticResource ModernListBox}" SelectionMode="Extended">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="False">
                                            <Setter Property="Opacity" Value="0.4"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                      VerticalAlignment="Center" Margin="0,0,10,0"
                                      Checked="DirectoryCheckBox_Changed" 
                                      Unchecked="DirectoryCheckBox_Changed"/>
                            <TextBlock Text="{Binding Path}" VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" FontSize="12">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="False">
                                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="+ Add Folder" Click="AddDirectory_Click" Style="{StaticResource PrimaryButton}" Margin="0,0,8,0"/>
                <Button Content="Remove" Click="RemoveDirectory_Click" Style="{StaticResource ModernButton}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock Text="Extensions" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                <TextBox x:Name="extensionsTextBox" Text=".cs, .xaml, .py, .csproj, .sln, .slnx, .json, .md, .props, .targets" Margin="0,6,0,12" 
                         TextChanged="Filters_Changed" Style="{StaticResource ModernTextBox}"/>
                <TextBlock Text="Ignored Directories" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextSecondary}"/>
                <TextBox x:Name="ignoredDirsTextBox" Text="bin, obj, .vs, Properties" Margin="0,6,0,0" 
                         TextChanged="Filters_Changed" Style="{StaticResource ModernTextBox}"/>
            </StackPanel>

            <Expander Grid.Row="1" IsExpanded="False" Foreground="{StaticResource TextPrimary}" Margin="0,20,0,0">
                <Expander.Header>
                    <TextBlock Text="ðŸ”— External Git Repositories" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                </Expander.Header>
                <StackPanel Margin="0,12,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="gitUrlTextBox" Style="{StaticResource ModernTextBox}"
                                 Text="https://github.com/user/repo"/>
                        <Button Grid.Column="1" Content="Clone" Click="AddGitRepo_Click" 
                                Style="{StaticResource GitButton}" Margin="8,0,0,0"/>
                    </Grid>

                    <ListBox x:Name="gitRepoListBox" Margin="0,12,0,0" MinHeight="60" MaxHeight="150" Style="{StaticResource ModernListBox}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"
                                              Checked="GitRepoCheckBox_Changed" 
                                              Unchecked="GitRepoCheckBox_Changed"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock Text="{Binding Branch}" FontSize="10" Foreground="{StaticResource TextSecondary}"/>
                                    </StackPanel>
                                    <Button Grid.Column="2" Content="ðŸ”„" Click="RefreshGitRepo_Click" 
                                            Style="{StaticResource IconButton}" ToolTip="Pull latest"/>
                                    <Button Grid.Column="3" Content="âœ•" Click="RemoveGitRepo_Click" 
                                            Style="{StaticResource IconButton}" Foreground="{StaticResource AccentPrimary}" ToolTip="Remove"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock x:Name="gitStatusText" Text="" FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,8,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Expander>
        </Grid>
    </Grid>
</UserControl>
