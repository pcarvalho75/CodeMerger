<UserControl x:Class="CodeMerger.Controls.ActivityStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border x:Name="activityBorder" Background="{StaticResource BackgroundCard}" Padding="24,8" BorderThickness="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Ellipse x:Name="activityIndicator" Width="8" Height="8" Fill="#8892a0" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBlock x:Name="activityText" Grid.Column="1" Text="Idle" Foreground="{StaticResource TextSecondary}" FontSize="11" VerticalAlignment="Center"/>
            <TextBlock x:Name="statsText" Grid.Column="2" Text="No activity this session" Foreground="{StaticResource TextSecondary}" FontSize="10" VerticalAlignment="Center" Margin="12,0,0,0"/>
            <Button Grid.Column="3" Content="ðŸ”„" Click="ResetStats_Click" Style="{StaticResource IconButton}" ToolTip="Reset session statistics" Margin="4,0,0,0" FontSize="11"/>
        </Grid>
    </Border>
</UserControl>
