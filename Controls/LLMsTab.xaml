<UserControl x:Class="CodeMerger.Controls.LLMsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Claude Desktop Section -->
        <Border Background="{StaticResource BackgroundDark}" CornerRadius="8" Padding="20" Margin="0,0,0,16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="ðŸŸ£ Claude Desktop" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"
                               ToolTip="Claude Desktop connects via stdio pipe. CodeMerger registers itself in Claude's MCP config so it auto-starts when Claude opens."/>
                    <Border Background="#2a2a4a" CornerRadius="4" Padding="8,3" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="stdio pipe â€” auto-managed" Foreground="{StaticResource TextSecondary}" FontSize="10"
                                   ToolTip="Claude Desktop communicates with CodeMerger over a local stdio pipe. No network ports or tunnels needed."/>
                    </Border>
                </StackPanel>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Installation:" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Border Background="{StaticResource BackgroundCard}" CornerRadius="4" Padding="8,4" Margin="0,0,16,0">
                            <TextBlock x:Name="claudeInstallStatus" Text="Checking..." Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </Border>
                        <TextBlock Text="MCP Config:" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Border Background="{StaticResource BackgroundCard}" CornerRadius="4" Padding="8,4">
                            <TextBlock x:Name="claudeConfigStatus" Text="Checking..." Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="claudeDownloadButton" Content="â¬‡ Download Claude" Click="ClaudeDownload_Click" Style="{StaticResource LinkButton}" Visibility="Collapsed"/>
                        <Button x:Name="claudeAddConfigButton" Content="âž• Add to Claude Config" Click="ClaudeAddConfig_Click" Style="{StaticResource ModernButton}" Visibility="Collapsed" Margin="0,0,8,0"/>
                        <Button Content="ðŸ“‚ Open Config Folder" Click="ClaudeOpenConfigFolder_Click" Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- ChatGPT Desktop Section -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundDark}" CornerRadius="8" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="ðŸŸ¢ ChatGPT Desktop" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                    <Border Background="#2a2a4a" CornerRadius="4" Padding="8,3" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="SSE + Cloudflare tunnel" Foreground="{StaticResource TextSecondary}" FontSize="10"/>
                    </Border>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Server:" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Border Background="{StaticResource BackgroundCard}" CornerRadius="4" Padding="8,4" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="chatGptIndicator" Width="8" Height="8" Fill="#555" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="chatGptStatusText" Text="Stopped" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="8,0,0,0">
                        <Button x:Name="chatGptStartButton" Content="â–¶ Start Server" Click="ChatGptStart_Click" Style="{StaticResource PrimaryButton}"/>
                        <Button x:Name="chatGptStopButton" Content="â¹ Stop" Click="ChatGptStop_Click" Style="{StaticResource ModernButton}" Visibility="Collapsed" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12,0,0,0">
                        <TextBlock Text="Public URL:" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="publicUrlTextBox" Width="350" IsReadOnly="True" Style="{StaticResource ModernTextBox}" 
                                 Background="{StaticResource BackgroundCard}" FontSize="11" Text="Click 'Start Server' to generate URL"/>
                        <Button x:Name="copyUrlButton" Content="ðŸ“‹ Copy" Click="CopyUrl_Click" Style="{StaticResource ModernButton}" Margin="8,0,0,0" IsEnabled="False"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button x:Name="tunnelHelpButton" Content="?" Click="TunnelHelp_Click" Style="{StaticResource IconButton}" ToolTip="Setup instructions"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
