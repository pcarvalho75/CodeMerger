<UserControl x:Class="CodeMerger.Controls.LessonsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="0,16,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Local Lessons -->
        <Grid Grid.Column="0" Margin="0,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Local Lessons" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                <TextBlock x:Name="localLessonCountText" Text="(0/100)" Foreground="{StaticResource TextSecondary}" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <ListBox x:Name="localLessonsListBox" Grid.Row="1" Style="{StaticResource ModernListBox}" 
                     DisplayMemberPath="Component" SelectionChanged="LocalLessonListBox_SelectionChanged"/>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                <Button x:Name="deleteLessonButton" Content="ðŸ—‘ Delete" Click="DeleteLesson_Click" Style="{StaticResource ModernButton}" IsEnabled="False" Margin="0,0,6,0"/>
                <Button x:Name="submitLessonButton" Content="ðŸ“¤ Submit" Click="SubmitLesson_Click" Style="{StaticResource ModernButton}" IsEnabled="False" Margin="0,0,6,0"/>
                <Button Content="ðŸ§¹ Clear All" Click="ClearLocalLessons_Click" Style="{StaticResource ModernButton}"/>
            </StackPanel>
        </Grid>

        <!-- Community Lessons -->
        <Grid Grid.Column="1" Margin="8,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="Community Lessons" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                <TextBlock x:Name="communityLessonCountText" Text="(0)" Foreground="{StaticResource TextSecondary}" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
            <ListBox x:Name="communityLessonsListBox" Grid.Row="1" Style="{StaticResource ModernListBox}" 
                     DisplayMemberPath="Component" SelectionChanged="CommunityLessonListBox_SelectionChanged"/>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                <Button x:Name="syncLessonsButton" Content="ðŸ”„ Sync Now" Click="SyncLessonsNow_Click" Style="{StaticResource ModernButton}" Margin="0,0,6,0"/>
                <Button Content="âš™ Settings" Click="CommunityLessonsSettings_Click" Style="{StaticResource ModernButton}"/>
                <TextBlock x:Name="lessonSyncStatusText" Text="" Foreground="{StaticResource TextSecondary}" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Lesson Detail -->
        <Border x:Name="lessonDetailPanel" Grid.Column="2" Background="{StaticResource BackgroundDark}" CornerRadius="8" Padding="16" Margin="8,0,0,0" Visibility="Collapsed">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Lesson Detail" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,12"/>
                    <TextBlock Text="Type:" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    <TextBlock x:Name="detailTypeText" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,2,0,8"/>
                    <TextBlock Text="Component:" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    <TextBlock x:Name="detailComponentText" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,2,0,8"/>
                    <TextBlock Text="Contributor:" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    <TextBlock x:Name="detailContributorText" Foreground="{StaticResource TextPrimary}" FontSize="12" Margin="0,2,0,12"/>
                    <TextBlock Text="Content:" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="detailContentText" IsReadOnly="True" TextWrapping="Wrap"
                             Background="{StaticResource BackgroundCard}" Foreground="{StaticResource TextPrimary}" 
                             BorderThickness="0" Padding="8" FontSize="11" MaxHeight="300"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
