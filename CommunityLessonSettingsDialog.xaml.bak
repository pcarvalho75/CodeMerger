<Window x:Class="CodeMerger.CommunityLessonSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Community Lessons Settings" Height="280" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1e1e2e">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Repo URL -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Repository URL:" Foreground="#cdd6f4" VerticalAlignment="Center" Margin="0,0,0,12"/>
        <TextBox x:Name="repoUrlTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,12" Padding="6,4"
                 Background="#313244" Foreground="#cdd6f4" BorderBrush="#45475a"
                 ToolTip="GitHub repository URL for community lessons"/>

        <!-- GitHub Token -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="GitHub Token:" Foreground="#cdd6f4" VerticalAlignment="Center" Margin="0,0,0,12"/>
        <PasswordBox x:Name="githubTokenBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,12" Padding="6,4"
                     Background="#313244" Foreground="#cdd6f4" BorderBrush="#45475a"
                     ToolTip="Personal access token (required for submitting lessons). Needs 'repo' scope."/>

        <!-- Sync Interval -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Sync Interval (hrs):" Foreground="#cdd6f4" VerticalAlignment="Center" Margin="0,0,0,12"/>
        <TextBox x:Name="syncIntervalTextBox" Grid.Row="2" Grid.Column="1" Width="60" HorizontalAlignment="Left" Margin="0,0,0,12" Padding="6,4"
                 Background="#313244" Foreground="#cdd6f4" BorderBrush="#45475a"
                 ToolTip="Hours between automatic community lesson syncs (default: 24)"/>

        <!-- Info -->
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Foreground="#6c7086" FontSize="11" TextWrapping="Wrap" Margin="0,4,0,0"
                   Text="Community lessons are shared across all CodeMerger users. A GitHub token with 'repo' scope is only needed to submit lessons. Reading community lessons requires no token."/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Save" Click="Save_Click" Width="80" Padding="6,6"
                    Background="#89b4fa" Foreground="#1e1e2e" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="80" Padding="6,6" Margin="8,0,0,0"
                    Background="#45475a" Foreground="#cdd6f4" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
